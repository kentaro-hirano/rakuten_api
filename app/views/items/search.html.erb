<h1>Rakuserach</h1>
<div class='content'>
  <div id="search-box">
    <%= form_tag('/', method: :get) do %>
        <%= text_field_tag :good, "",  id: "good_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <!-- <div id='good_list'> -->
     <%#= render 'item_list', items: @items %>
  <!-- </div> -->
  <% if @items.present? %>
    <% @items.each do |item| %>
      <div class="list">
        <% binding.pry %>
      <% if item['imageFlag'] %>
        <%= link_to (image_tag(item['smallImageUrls'][0], style: "width: 70px;height: 100px;display: inline-block;")), item['itemUrl'] %>
      <% end %>
   
        <%= item.name %>
      </div>
    <% end %>
  <% end %>
</div>